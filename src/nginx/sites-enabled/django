upstream dynamic_server {
  server plato:8000;
}

server {
  listen 80;
  server_name localhost;
  charset utf-8;

  # serve static fiels
  location /static {
      alias /code/static;
  }

  # serve media files
  location /media/ {
    alias /code/media/;
  }

  location / {
    proxy_pass http://dynamic_server;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $host;
    proxy_redirect off;
    if (!-f $request_filename) {
        proxy_pass http://dynamic_server;
        break;
    }
  }
  # Finally, send all non-media request to the Django Server
  #location / {
  #  try_files $uri @wsgi;
  #}

  #location @wsgi {
  #  include uwsgi_params;
  #  uwsgi_pass 127.0.0.1:8000;
  #}
}